#include<stdio.h>
int factorial(int n);
int main()
{
  int num;
  printf("madhubalan I\n192321142\n");
  printf("enter the integer: ");
  scanf("%d",&num);
  printf("the factorail of %d is:%d", num, factorial(num));
return 0;
}
int factorial(int n)
{
  if (n==0)
  {
    return 1;
  }
  else
  {
    return n*factorial(n-1);
  }
}
